#game title screen definition
name:         game_screen
# a negative x or y position means to draw from the right or
#bottom by the number.  so rect.x = -100 means to draw x = screen.w - x
# width or height of 0 means fill screen.  Anything less than 0 means
# full screen less than the width specified
rect:         0,0,0,0
canHasFocus:  True
drawGeneric:  False
passesInput:  False
components:
  - type:       IMAGE
    id:         0
    image:      images/UI/topbar.png
    name:       hud
    rect:       0,0,1,1
    color:      1,1,1
    alpha:      1
  - type:       BUTTON
    name:       fire
    id:         1
    rect:       0.01,0.3,1,1
    hotkey:     n
    justify:    CENTER
    buttonText: fire
    buttonType: TEXT

